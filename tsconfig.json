{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "src/",
    "paths": {
      "*": [
        "app/*",
        "app/helpers/*",
        "app/models/*",
        "app/services/*",
        "app/shared/*"
      ],
      "app/*": ["app"],
      "helpers/*": [ "app/helpers" ],
      "models/*": [ "app/models" ],
      "services/*": [ "app/services" ],
      "shared/*": [ "app/shared" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
